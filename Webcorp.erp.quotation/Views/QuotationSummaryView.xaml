<UserControl x:Class="Webcorp.erp.quotation.Views.QuotationSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:designData="clr-namespace:Webcorp.erp.quotation.DesignData"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=designData:DQuotationViewModel,IsDesignTimeCreatable=True}"
             
             d:DesignHeight="55" d:DesignWidth="500" BorderBrush="DarkGray" BorderThickness="5" Background="#33FFFFFF">
    
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="{Binding Model.Numero}" FontSize="13" FontWeight="Bold"/>
            <TextBlock Text=" " FontSize="13" FontWeight="Bold"/>
            <TextBlock Text="{Binding Model.Commentaire}" FontSize="13" FontWeight="Bold"/>
            <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Height="26"  VerticalAlignment="Top" Width="76"  />
            <Button Content="Save" Command="{Binding SaveCommand}" Grid.Column="1" Grid.Row="7" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Margin="0,0,95,0" />
        </StackPanel>

</UserControl>
